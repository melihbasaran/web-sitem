@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark fw-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Profil">
             Merhaba @User.Identity?.Name!
        </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-danger fw-bold" style="text-decoration: none;">
                Çıkış Yap 
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-primary fw-bold" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-success fw-bold" asp-area="Identity" asp-page="/Account/Login">Giriş Yap </a>
    </li>
}