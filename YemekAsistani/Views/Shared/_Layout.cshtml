<!DOCTYPE html>
<html lang="tr">
<head>
    <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/2917/2917995.png">    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yemek Asistanı</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        /* Taslak çizimlerindeki sade yapı */
        body { min-height: 100vh;display: flex;flex-direction: column; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background-color: #b4f2f7; }
        .navbar { border-bottom: 2px solid #1b1a1a; box-shadow: 0 2px 4px rgba(245, 3, 200, 0.1);}
        .footer { position: relative; bottom: 0; width: 100%; height: 60px; line-height: 60px; background-color: #dceef6; border-top: 2px solid #333; text-align: center;margin-top: 50px;clear: both; }
        .main-content { margin-top: 30px; margin-bottom: 80px; flex: 1;}
        .card { border: 2px solid #ffffff; border-radius: 0; box-shadow: 5px 5px 0px #000000; transition: transform 0.2s; background-color:#dceef6;}
        .card:hover { transform: translateY(-5px) ; }
        .btn-custom { border: 2px solid #333; border-radius: 0; background: #f8f8f8; color: #333; font-weight: bold; box-shadow: 3px 3px 0px #333; }
        .btn-custom:hover { background: #333; color: #ff42df; box-shadow: 1px 1px 0px #000; }
    </style>
</head>
<body>
   <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container justify-content-center"> <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-grow-0 align-items-center">
                    
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold px-5" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold px-5" asp-controller="Recipes" asp-action="Index">Tarifler</a>
                        </li>
                    </ul>

                    <a class="navbar-brand fs-5 fw-bold m-0 px-5 text-uppercase" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-utensils"></i> YEMEK ASİSTANI
                    </a>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold px-5" asp-controller="Shopping" asp-action="Index">Alışveriş</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold px-5" asp-area="" asp-controller="Home" asp-action="Musics" target="_blank">
                                 Müzikler
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    

    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2025 - Tüm Zamanını Bize Ayıran Değerli Annelerimize En İçten Dileklerimizle Herkes Adına Teşekkür Ederim 
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>